- @title = t('.title')
- @side_type = :uploading
= error_messages_for :water_point, :photo
.summary= t('.summary')
- form_for(@water_point, :url=>{:locale => params[:locale], :action=>:create}, :html => { :multipart => true }) do |f|
  = hidden_field_tag :locale, params[:locale]
  .row
    = f.label :title
    = f.text_field :title
  .row
    = f.label :note
    = f.text_area :note, :cols =>40, :rows =>4
  .row
    %span.notify
      = check_box_tag :notify, 1, (true unless (params[:water_point] && params[:notify].blank?))
      = f.label :notify
      = t('.when_somebody_posts')
  .row
    %span.upload
      = label :water_point, :photo
      = t('.your_wp_photo')
    %span.hint
      = t('.hint')
      %br/
      = t('.if_gps')
      = file_field_tag :photo_file
  %span.submit
    = f.submit t('.submit')
